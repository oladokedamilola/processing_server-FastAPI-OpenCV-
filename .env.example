# Server Configuration
APP_NAME="FastAPI Processing Server"
APP_VERSION="1.0.0"
ENVIRONMENT="development"  # development, staging, production
HOST="0.0.0.0"
PORT=8001
DEBUG=true
WORKERS=1

# API Configuration
API_PREFIX="/api"
API_V1_PREFIX="/api/v1"
PROJECT_DESCRIPTION="FastAPI server for computer vision processing in smart surveillance systems"

# Security
API_KEY="dev-key-change-in-production"
SECRET_KEY="your-secret-key-change-in-production-32-characters-min"
API_KEY_HEADER="X-API-Key"
ALLOWED_ORIGINS="http://localhost:8000,http://127.0.0.1:8000"
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=900

# File Upload Limits (in bytes)
MAX_IMAGE_SIZE=10485760  # 10MB
MAX_VIDEO_SIZE=52428800  # 50MB
ALLOWED_IMAGE_TYPES="image/jpeg,image/png,image/jpg"
ALLOWED_VIDEO_TYPES="video/mp4,video/avi,video/mov"

# Processing Configuration
YOLO_MODEL="yolov8n.pt"
CONFIDENCE_THRESHOLD=0.5
DETECTION_TIMEOUT=30
VIDEO_FRAME_SAMPLE_RATE=5
MAX_VIDEO_DURATION=300

# Job Queue Configuration
JOB_TIMEOUT=3600
MAX_CONCURRENT_JOBS=3
JOB_CLEANUP_INTERVAL=300

# Logging
LOG_LEVEL="INFO"
LOG_FILE="app.log"
ACCESS_LOG=true

# Integration
DJANGO_WEBHOOK_URL=""
WEBHOOK_ENABLED=false

# Performance
ENABLE_GZIP=true
MAX_UPLOAD_WORKERS=4




# Performance Optimization
ENABLE_GZIP=true
REQUEST_TIMEOUT=30
VIDEO_PROCESSING_TIMEOUT=1800
MODEL_LOAD_TIMEOUT=60
FILE_UPLOAD_TIMEOUT=300

# Concurrency Limits
MAX_CONCURRENT_REQUESTS=10
MAX_CONCURRENT_UPLOADS=3
MAX_CONCURRENT_VIDEO_JOBS=2

# Memory Management
MEMORY_LIMIT_MB=400  # Leave buffer on 512MB free tier

# Video Processing Optimization
VIDEO_PREPROCESSING_ENABLED=true
VIDEO_TARGET_FPS=10.0
VIDEO_TARGET_WIDTH=640
VIDEO_TARGET_HEIGHT=480
VIDEO_MAX_DURATION=300
DEFAULT_FRAME_SAMPLE_RATE=5
MAX_EXTRACTED_FRAMES=1000

# Caching
ENABLE_CACHING=true
MEMORY_CACHE_SIZE_MB=50
DISK_CACHE_SIZE_MB=200
CACHE_DEFAULT_TTL=1800